{% extends 'base.html.twig' %}

{% block title %}Nouvelle Agence{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Créer une nouvelle agence</h1>

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-success">Enregistrer</button>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="text-center mt-3">
        <a href="{{ path('agency_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
</div>
{% endblock %}